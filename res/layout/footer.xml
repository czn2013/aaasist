<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/footer_title"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@drawable/bottom_bg" >

        <ImageView
            android:id="@+id/iv_footer_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/icon_big" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_footer_app"
            android:text="@string/welcome_message"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/ib_footer"
            android:background="#00000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/main_btn" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_footer_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>